{{#if user}}
  {{#if (eq user.role 'admin')}}
    {{!< admin}}
  {{else if (eq user.role 'staff')}}
    {{!< staff}}
  {{else}}
    {{!< user}}
  {{/if}}
{{else}}
  {{!< user}}
{{/if}}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body text-center">
          <h1 class="text-danger mb-4">
            <i class="fas fa-exclamation-triangle"></i>
          </h1>
          <h2 class="card-title text-danger mb-3">Oops! Something went wrong</h2>
          <p class="card-text text-muted mb-4">
            {{#if error}}
              {{error}}
            {{else}}
              An unexpected error occurred. Please try again later.
            {{/if}}
          </p>
          <div class="d-flex justify-content-center gap-3">
            {{#if user}}
              {{#if (eq user.role 'admin')}}
                <a href="/admin/dashboard" class="btn btn-primary">
                  <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                </a>
              {{else if (eq user.role 'staff')}}
                <a href="/staff/dashboard" class="btn btn-primary">
                  <i class="fas fa-tachometer-alt me-2"></i>Staff Dashboard
                </a>
              {{else}}
                <a href="/" class="btn btn-primary">
                  <i class="fas fa-home me-2"></i>Go Home
                </a>
              {{/if}}
            {{else}}
              <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Go Home
              </a>
            {{/if}}
            <button onclick="history.back()" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
            {{#unless user}}
            <a href="/login" class="btn btn-outline-primary">
              <i class="fas fa-sign-in-alt me-2"></i>Login
            </a>
            <a href="/register" class="btn btn-outline-success">
              <i class="fas fa-user-plus me-2"></i>Sign Up
            </a>
            {{/unless}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 