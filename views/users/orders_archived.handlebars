<head>
  <link href="https://fonts.googleapis.com/css?family=DM+Sans:400,500,700&display=swap" rel="stylesheet">
  <style>
    .orders-archived-container {
      font-family: 'DM Sans', sans-serif;
      background: #f8f9fa;
      color: #222;
      max-width: 1100px;
      margin: 40px auto 0 auto;
      background: #fff;
      border-radius: 28px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.09);
      padding: 2.5rem 2rem 3rem 2rem;
    }
    .orders-archived-container h1 {
      font-size: 2.1rem;
      font-weight: 700;
      color: #222;
      margin-bottom: 0.7rem;
    }
    .orders-archived-container .btn-outline-primary {
      border: 2px solid #ffd700;
      color: #222;
      background: #fff;
      border-radius: 24px;
      padding: 0.6rem 1.3rem;
      font-weight: 600;
      transition: all 0.2s cubic-bezier(.4,2,.6,1);
      margin-bottom: 1.3rem;
    }
    .orders-archived-container .btn-outline-primary:hover {
      background: #ffd700;
      color: #222;
      box-shadow: 0 4px 12px rgba(255, 215, 0, 0.13);
    }
    .orders-archived-container .nav-tabs {
      border-bottom: none;
      margin-bottom: 2rem;
    }
    .orders-archived-container .nav-link {
      font-weight: 600;
      color: #888;
      border: none;
      border-radius: 22px 22px 0 0;
      padding: 0.7rem 2.2rem;
      background: #f5f5f5;
      margin-right: 0.6rem;
      transition: all 0.18s;
    }
    .orders-archived-container .nav-link.active, 
    .orders-archived-container .nav-link:hover {
      background: #ffeaa7;
      color: #222;
      box-shadow: 0 4px 18px rgba(255, 215, 0, 0.07);
    }
    .orders-archived-container .card {
      background: #fff;
      border-radius: 24px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.10);
      margin-bottom: 1.2rem;
      border: 1.5px solid #ffeaa7;
      transition: box-shadow .17s cubic-bezier(.4,2,.6,1);
    }
    .orders-archived-container .card:hover {
      box-shadow: 0 16px 48px rgba(0,0,0,0.13);
      border-color: #ffd700;
    }
    .orders-archived-container .card-title {
      font-size: 1.13rem;
      font-weight: 700;
      color: #222;
      margin-bottom: 0.7rem;
    }
    .orders-archived-container .badge {
      display: inline-block;
      padding: 0.4rem 1.2rem;
      border-radius: 18px;
      font-size: 0.96rem;
      font-weight: 700;
      color: #fff;
      background: #ffd700;
      box-shadow: 0 2px 8px rgba(255, 215, 0, 0.12);
      margin-right: 0.35rem;
    }
    .orders-archived-container .bg-info { background: #17a2b8!important; }
    .orders-archived-container .bg-success { background: #27ae60!important; }
    .orders-archived-container .bg-primary { background: #4263eb!important; }
    .orders-archived-container .bg-warning { background: #ffa500!important; color: #222!important;}
    .orders-archived-container .bg-danger { background: #dc3545!important; }
    .orders-archived-container .bg-secondary { background: #b2bec3!important; color: #222!important;}
    .orders-archived-container .btn-danger.btn-sm {
      font-size: 0.98rem;
      border-radius: 20px;
      padding: 0.38rem 1.1rem;
      font-weight: 600;
      border: none;
      background: #dc3545;
      color: #fff;
      margin-top: 0.2rem;
      transition: all 0.18s;
    }
    .orders-archived-container .btn-danger.btn-sm:hover {
      background: #c82333;
      color: #fff;
      box-shadow: 0 4px 14px rgba(220, 53, 69, 0.14);
    }
    .orders-archived-container .list-unstyled { list-style: none; padding: 0; margin: 0; }
    .orders-archived-container .alert-info, 
    .orders-archived-container .empty-state {
      background: #ffd900;
      color: #fff;
      border-radius: 22px;
      text-align: center;
      padding: 2.2rem 0.7rem;
      font-size: 1.13rem;
      margin: 2.3rem auto;
      max-width: 350px;
      box-shadow: 0 4px 24px rgba(253, 121, 168, 0.07);
      letter-spacing: 0.2px;
      border: none;
    }
    .orders-archived-container .alert-info i, 
    .orders-archived-container .empty-state i {
      font-size: 2.2rem;
      margin-bottom: 1rem;
      display: block;
      opacity: 0.8;
    }
    @media (max-width: 768px) {
      .orders-archived-container { padding: 1.2rem 0.7rem 2rem 0.7rem; }
      .orders-archived-container .nav-link { padding: 0.5rem 1.3rem; font-size: 0.97rem; }
      .orders-archived-container h1 { font-size: 1.45rem; }
      .orders-archived-container .card-body { padding: 1.1rem 0.5rem; }
    }
  </style>
</head>

<div class="orders-archived-container">
    <h1 class="mb-4 fw-bold">Archived Orders</h1>
    <a href="/orders" class="btn btn-outline-primary mb-3"><i class="bi bi-arrow-left"></i> Back to Orders</a>
    <ul class="nav nav-tabs mb-4" id="archivedOrdersTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="purchases-tab" data-bs-toggle="tab" data-bs-target="#purchases"
                type="button" role="tab" aria-controls="purchases" aria-selected="true">
                <i class="bi bi-bag"></i> Purchases
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="sales-tab" data-bs-toggle="tab" data-bs-target="#sales" type="button"
                role="tab" aria-controls="sales" aria-selected="false">
                <i class="bi bi-cash-stack"></i> Sales
            </button>
        </li>
    </ul>
    <div class="tab-content" id="archivedOrdersTabContent">
        <!-- Purchases -->
        <div class="tab-pane fade show active" id="purchases" role="tabpanel" aria-labelledby="purchases-tab">
            {{#if purchases.length}}
            <div class="row g-4">
                {{#each purchases}}
                <div class="col-12">
                    <div class="card shadow-sm border-0 rounded-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title mb-2 fw-semibold">{{listing_title}}</h5>
                                    <ul class="list-unstyled mb-2">
                                        <li><span class="fw-semibold text-secondary">Order ID:</span> #{{order_id}}</li>
                                        <li><span class="fw-semibold text-secondary">Status:</span>
                                            <span class="badge
                        {{#if (eq status 'pending')}}bg-secondary{{/if}}
                        {{#if (eq status 'paid')}}bg-info{{/if}}
                        {{#if (eq status 'shipped')}}bg-primary{{/if}}
                        {{#if (eq status 'completed')}}bg-success{{/if}}
                        {{#if (eq status 'cancelled')}}bg-danger{{/if}}">{{status}}</span>
                                            {{#if (eq status 'cancelled')}}
                                            <button class="btn btn-danger btn-sm delete-order-btn mt-2"
                                                data-order-id="{{order_id}}">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                            {{/if}}
                                        </li>
                                        <li><span class="fw-semibold text-secondary">Seller:</span> {{seller_email}}</li>
                                        <li><span class="fw-semibold text-secondary">Quantity:</span> {{quantity}}</li>
                                        <li><span class="fw-semibold text-secondary">Price:</span> ${{price}}</li>
                                        <li><span class="fw-semibold text-secondary">Order Date:</span> {{created_at}}</li>
                                    </ul>
                                </div>
                                <div class="col-md-4 text-center d-flex align-items-center justify-content-center">
                                    {{#if listing_image}}
                                    <img src="{{listing_image}}" alt="Product Image"
                                        class="img-fluid rounded-3 shadow-sm"
                                        style="max-width:220px; max-height:180px; object-fit:cover;">
                                    {{else}}
                                    <span class="text-muted">No image</span>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="alert alert-info rounded-4 empty-state">
                <i class="bi bi-archive"></i>
                No archived purchases yet.
            </div>
            {{/if}}
        </div>

        <!-- Sales -->
        <div class="tab-pane fade" id="sales" role="tabpanel" aria-labelledby="sales-tab">
            {{#if sales.length}}
            <div class="row g-4">
                {{#each sales}}
                <div class="col-12">
                    <div class="card shadow-sm border-0 rounded-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title mb-2 fw-semibold">{{listing_title}}</h5>
                                    <ul class="list-unstyled mb-2">
                                        <li><span class="fw-semibold text-secondary">Order ID:</span> #{{order_id}}</li>
                                        <li><span class="fw-semibold text-secondary">Status:</span>
                                            <span class="badge
                        {{#if (eq status 'pending')}}bg-secondary{{/if}}
                        {{#if (eq status 'paid')}}bg-info{{/if}}
                        {{#if (eq status 'shipped')}}bg-primary{{/if}}
                        {{#if (eq status 'completed')}}bg-success{{/if}}
                        {{#if (eq status 'cancelled')}}bg-danger{{/if}}">{{status}}</span>
                                            {{#if (eq status 'cancelled')}}
                                            <button class="btn btn-danger btn-sm delete-order-btn mt-2"
                                                data-order-id="{{order_id}}">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                            {{/if}}
                                        </li>
                                        <li><span class="fw-semibold text-secondary">Buyer:</span> {{buyer_email}}</li>
                                        <li><span class="fw-semibold text-secondary">Quantity:</span> {{quantity}}</li>
                                        <li><span class="fw-semibold text-secondary">Price:</span> ${{price}}</li>
                                        <li><span class="fw-semibold text-secondary">Order Date:</span> {{created_at}}</li>
                                    </ul>
                                </div>
                                <div class="col-md-4 text-center d-flex align-items-center justify-content-center">
                                    {{#if listing_image}}
                                    <img src="{{listing_image}}" alt="Product Image"
                                        class="img-fluid rounded-3 shadow-sm"
                                        style="max-width:220px; max-height:180px; object-fit:cover;">
                                    {{else}}
                                    <span class="text-muted">No image</span>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="alert alert-info rounded-4 empty-state">
                <i class="bi bi-archive"></i>
                No archived sales yet.
            </div>
            {{/if}}
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.delete-order-btn').forEach(btn => {
  btn.addEventListener('click', function () {
    const orderId = this.getAttribute('data-order-id');
    if (!confirm('Are you sure you want to permanently delete this order? This action cannot be undone.')) return;
    fetch(`/orders/delete/${orderId}`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      credentials: 'same-origin'
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          // Remove the order card from UI
          this.closest('.col-12').remove();
        } else {
          alert(data.error || 'Failed to delete order.');
        }
      })
      .catch(() => alert('Server error, could not delete order.'));
  });
});
</script>
