<section class="hero-section full-width-section">
  <div class="hero-content">
    <h1 class="hero-title">Share Your Experience</h1>
    <p class="hero-subtitle">Help us improve and shape the future of sustainable fashion</p>
  </div>
</section>

{{#if successMessage}}
<div class="alert alert-success">{{successMessage}}</div>
{{/if}}

{{#if errorMessage}}
<div class="alert alert-danger">{{errorMessage}}</div>
{{/if}}

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="feedback-container">
                <div class="feedback-section">
                    <h3 class="section-title">Send Us Your Feedback</h3>
                    <form id="feedbackForm" action="/feedback" method="POST">
                        <div class="form-group">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="fullName" id="fullName" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" name="email" id="email" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" name="subject" id="subject" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Your Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-submit">Send Feedback</button>
                    </form>
                </div>

                <div class="contact-info">
                    <h5>Other Ways to Reach Us</h5>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>support@vintique.com</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>+1 (555) 123-4567</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>123 Fashion Street, Vintage City, VS 12345</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>