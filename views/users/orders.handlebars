<!-- Review Modal -->
<div class="modal fade" id="leaveReviewModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form id="reviewForm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Leave a Review</h5>
        </div>
        <div class="modal-body">
          <input type="hidden" name="listing_id" id="reviewListingId">
          <input type="hidden" name="orderItemId" id="reviewOrderItemId">

          <div class="mb-3">
            <label class="form-label fw-bold">Rate this seller:</label>
            <div class="star-rating d-flex justify-content-center">
              <span class="star fs-3 mx-1" data-rating="1">★</span>
              <span class="star fs-3 mx-1" data-rating="2">★</span>
              <span class="star fs-3 mx-1" data-rating="3">★</span>
              <span class="star fs-3 mx-1" data-rating="4">★</span>
              <span class="star fs-3 mx-1" data-rating="5">★</span>
            </div>
            <input type="hidden" name="rating" id="rating" required>
            <div class="text-center mt-2">
              <small class="text-muted" id="ratingText">Click to rate</small>
            </div>
          </div>
          <div class="mb-3">
            <label for="reviewText" class="form-label">Your Review</label>
            <textarea name="reviewText" id="reviewText" class="form-control" rows="3"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Submit Review</button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Order Details Modal -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content rounded-4">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="orderDetailsModalLabel">Order Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="orderDetailsBody">
        <!-- Order details will be injected here -->
        <div class="text-center text-muted py-5">Loading...</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content rounded-4">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="orderDetailsModalLabel">Order Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="orderDetailsBody">
        <!-- Order details will be injected here -->
        <div class="text-center text-muted py-5">Loading...</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll('.view-order-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const orderId = this.getAttribute('data-order-id');
      const modalBody = document.getElementById('orderDetailsBody');
      modalBody.innerHTML = `<div class="text-center text-muted py-5">Loading...</div>`;

      fetch(`/orders/details/${orderId}`)
        .then(res => res.json())
        .then(data => {
          if (data.error) {
            modalBody.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
            return;
          }

          // Build HTML for each item
          let itemsHtml = data.items.map(item => `
          <div class="d-flex mb-3 align-items-center">
            <img src="${item.listing_image || '/assets/no-image.png'}" class="rounded-3 me-3" style="width: 70px; height: 70px; object-fit:cover;">
            <div>
              <div class="fw-semibold">${item.listing_title}</div>
              <div class="small text-muted">${item.listing_description || ''}</div>
              <div class="small">Qty: ${item.quantity} &nbsp; Price: $${item.price}</div>
            </div>
          </div>
        `).join('');

          modalBody.innerHTML = `
          <div class="mb-3">
            <span class="fw-bold">Order ID:</span> #${data.order.order_id}
          </div>
          <div class="mb-3">
            <span class="fw-bold">Status:</span>
            <span class="badge bg-info">${data.order.status}</span>
          </div>
          <div class="mb-3">
            <span class="fw-bold">Order Date:</span> ${data.order.created_at}
          </div>
          <div class="mb-3">
            <span class="fw-bold">Total Amount:</span> $${data.order.total_amount}
          </div>
          <div class="mb-3">
            <span class="fw-bold">Shipping Address:</span> ${data.order.shipping_address_name}, ${data.order.shipping_address_street}, ${data.order.shipping_address_city}, ${data.order.shipping_address_state}, ${data.order.shipping_address_postal_code}, ${data.order.shipping_address_country}, ${data.order.shipping_address_phone}
          </div>
          <hr>
          <h6>Items</h6>
          ${itemsHtml}
        `;
        });

      // Show the modal
      const orderModal = new bootstrap.Modal(document.getElementById('orderDetailsModal'));
      orderModal.show();
    });
  });



  document.querySelectorAll('.update-status-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const orderId = this.getAttribute('data-order-id');
      const dropdown = document.querySelector(`.order-status-dropdown[data-order-id="${orderId}"]`);
      const newStatus = dropdown.value;
      btn.disabled = true;
      fetch(`/orders/update-status/${orderId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status: newStatus }),
        credentials: 'same-origin'
      })
        .then(res => res.json())
        .then(data => {
          btn.disabled = false;
          if (data.success) {
            alert('Order status updated!');
            // Optionally reload to see badge color change:
            window.location.reload();
          } else {
            alert(data.error || 'Failed to update status.');
          }
        })
        .catch(() => {
          btn.disabled = false;
          alert('Error updating status.');
        });
    });
  });

  document.querySelectorAll('.mark-received-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const orderId = this.getAttribute('data-order-id');
      fetch(`/orders/mark-received/${orderId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            // Optionally update UI, show a message, or reload
            alert('Order marked as received!');
            location.reload();
          } else {
            alert(data.error || 'Something went wrong.');
          }
        });
    });
  });

  document.querySelectorAll('.cancel-order-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const orderId = this.getAttribute('data-order-id');
      if (confirm("Are you sure you want to cancel this order? This action cannot be undone.")) {
        fetch(`/orders/update-status/${orderId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status: 'cancelled' })
        })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              alert('Order cancelled!');
              location.reload();
            } else {
              alert(data.error || 'Something went wrong.');
            }
          });
      }
    });
  });



  document.querySelectorAll('.archive-order-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const orderId = this.getAttribute('data-order-id');
      if (confirm('Are you sure you want to archive this order?')) {
        fetch(`/orders/archive/${orderId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              alert('Order archived!');
              location.reload();
            } else {
              alert(data.error || 'Something went wrong.');
            }
          });
      }
    });
  });

  // Order review form javascript 

  document.querySelectorAll('.leave-review-btn').forEach(button => {
    button.addEventListener('click', () => {
      document.getElementById('reviewListingId').value = button.dataset.listingId;
      document.getElementById('reviewOrderItemId').value = button.dataset.orderItemId;
      const modal = new bootstrap.Modal(document.getElementById('leaveReviewModal'));
      modal.show();
    });
  });

  document.getElementById('reviewForm').addEventListener('submit', async function (e) {
    e.preventDefault(); // Prevent default HTML form submission

    const listing_id = document.getElementById('reviewListingId').value;
    const order_item_id = document.getElementById('reviewOrderItemId').value;
    const rating = document.getElementById('rating').value;
    const reviewText = document.getElementById('reviewText').value;

    const response = await fetch('/reviews/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ listing_id, order_item_id, rating, reviewText }),
    });

    if (response.ok) {
      // Close modal
      const modalEl = document.getElementById('leaveReviewModal');
      const modal = bootstrap.Modal.getInstance(modalEl);
      modal.hide();

      // Show success alert
      const alertDiv = document.createElement('div');
      alertDiv.className = 'alert alert-success position-fixed top-0 end-0 p-3 m-3';
      alertDiv.style.zIndex = 9999;
      alertDiv.textContent = '✅ Review submitted successfully!';
      document.body.appendChild(alertDiv);

      // Update the review button to "Reviewed"
      const reviewButton = document.querySelector(`.leave-review-btn[data-order-item-id="${order_item_id}"]`);
      if (reviewButton) {
        const reviewedBadge = document.createElement('span');
        reviewedBadge.className = 'badge bg-secondary ms-2';
        reviewedBadge.textContent = 'Reviewed';
        reviewButton.replaceWith(reviewedBadge);
      }

      // Auto-dismiss alert after 3 seconds
      setTimeout(() => alertDiv.remove(), 3000);
    } else {
      const errorText = await response.text();
      alert(`❌ Failed to submit review: ${errorText}`);
    }
  });

  const stars = document.querySelectorAll('.star-rating .star');
  const ratingInput = document.getElementById('rating');
  const ratingText = document.getElementById('ratingText');

  stars.forEach(star => {
    star.addEventListener('click', function () {
      const rating = this.getAttribute('data-rating');
      ratingInput.value = rating;

      // Highlight stars up to selected
      stars.forEach(s => {
        s.classList.toggle('text-warning', s.getAttribute('data-rating') <= rating);
      });

      ratingText.textContent = `You rated ${rating} star${rating > 1 ? 's' : ''}`;
    });
  });

</script>