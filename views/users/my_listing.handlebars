{{!< user}}

<div style="width: 100vw; position: relative; left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;">
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">Manage Your Listings</h1>
      <p class="hero-subtitle">View, edit, and keep track of all the items youâ€™re selling on Vintique.</p>
    </div>
  </section>
</div>

<div class="container mt-4">
  <div class="d-flex justify-content-end align-items-center mb-3">
    <div>
      <button id="cardViewBtn" class="btn btn-warning me-2 active" onclick="showCardView()">Card View</button>
      <button id="tableViewBtn" class="btn btn-outline-secondary" onclick="showTableView()">Table View</button>
    </div>
  </div>

  <!-- Card View -->
  <div id="cardView" class="products-grid">
    {{#if listings.length}}
      {{#each listings}}
        <div class="product-card" data-category="{{category}}" data-price="{{price}}" data-condition="{{item_condition}}" data-listing-id="{{listing_id}}">
          <div class="product-image">
            {{#if image_url}}
              <img src="{{image_url}}" alt="{{title}}">
            {{else}}
              <img src="/assets/logo.png" alt="{{title}}">
            {{/if}}
          </div>
          <div class="product-info">
            <div class="product-category">{{category}}</div>
            <h3 class="product-title">{{title}}</h3>
            <div class="product-details">
              <div class="product-price">${{price}}</div>
              <div class="product-condition {{conditionClass item_condition}}">
                {{capitalize item_condition}}
              </div>
            </div>
            <div class="product-date">Listed {{formatDate created_at}} ago</div>
            <div class="mt-3 d-flex gap-2">
              <button class="btn btn-success btn-sm" onclick="markAsSold(event, {{listing_id}})">Mark as Sold</button>
              <a class="btn btn-primary btn-sm" href="/edit_listing/{{listing_id}}">Edit</a>
              <button class="btn btn-danger btn-sm" onclick="deleteListing(event, {{listing_id}})">Delete</button>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="alert alert-info">You have no listings yet.</div>
    {{/if}}
  </div>

  <!-- Table View -->
  <div id="tableView" style="display:none;">
    {{#if listings.length}}
      <div class="table-responsive">
        <table class="table table-bordered align-middle">
          <thead class="table-light">
            <tr>
              <th>Image</th>
              <th>Title</th>
              <th>Category</th>
              <th>Condition</th>
              <th>Price</th>
              <th>Date Listed</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each listings}}
              <tr data-listing-id="{{listing_id}}">
                <td style="width: 80px;">
                  {{#if image_url}}
                    <img src="{{image_url}}" alt="{{title}}" style="width:60px; height:60px; object-fit:cover; border-radius:10px;">
                  {{else}}
                    <img src="/assets/logo.png" alt="{{title}}" style="width:60px; height:60px; object-fit:cover; border-radius:10px;">
                  {{/if}}
                </td>
                <td>{{title}}</td>
                <td>{{category}}</td>
                <td>{{capitalize item_condition}}</td>
                <td>${{price}}</td>
                <td>{{formatDate created_at}} ago</td>
                <td>
                  <div class="d-flex gap-2">
                    <button class="btn btn-success btn-sm" onclick="markAsSold(event, {{listing_id}})">Mark as Sold</button>
                    <a class="btn btn-primary btn-sm" href="/edit_listing/{{listing_id}}">Edit</a>
                    <button class="btn btn-danger btn-sm" onclick="deleteListing(event, {{listing_id}})">Delete</button>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="alert alert-info">You have no listings yet.</div>
    {{/if}}
  </div>
</div>

<script>
function showCardView() {
  document.getElementById('cardView').style.display = '';
  document.getElementById('tableView').style.display = 'none';
  document.getElementById('cardViewBtn').classList.add('active', 'btn-warning');
  document.getElementById('cardViewBtn').classList.remove('btn-outline-secondary');
  document.getElementById('tableViewBtn').classList.remove('active', 'btn-warning');
  document.getElementById('tableViewBtn').classList.add('btn-outline-secondary');
}
function showTableView() {
  document.getElementById('cardView').style.display = 'none';
  document.getElementById('tableView').style.display = '';
  document.getElementById('tableViewBtn').classList.add('active', 'btn-warning');
  document.getElementById('tableViewBtn').classList.remove('btn-outline-secondary');
  document.getElementById('cardViewBtn').classList.remove('active', 'btn-warning');
  document.getElementById('cardViewBtn').classList.add('btn-outline-secondary');
}
function markAsSold(event, listingId) {
  event.stopPropagation();
  if (!confirm('Mark this listing as sold? This action cannot be undone and will remove it from the marketplace.')) return;
  fetch(`/listings/${listingId}/mark_sold`, { method: 'POST' })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        // Remove the card or row from the DOM
        document.querySelectorAll(`[data-listing-id='${listingId}']`).forEach(el => el.remove());
      } else {
        alert(data.error || 'Failed to mark as sold.');
      }
    })
    .catch(() => alert('Failed to mark as sold.'));
}
function deleteListing(event, listingId) {
  event.stopPropagation();
  if (!confirm('Are you sure you want to delete this listing? This action cannot be undone.')) return;
  fetch(`/listings/${listingId}`, { method: 'DELETE' })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        // Remove the card or row from the DOM
        document.querySelectorAll(`[data-listing-id='${listingId}']`).forEach(el => el.remove());
      } else {
        alert(data.error || 'Failed to delete listing.');
      }
    })
    .catch(() => alert('Failed to delete listing.'));
}
</script>

<link rel="stylesheet" href="/assets/css/users/marketplace.css">
