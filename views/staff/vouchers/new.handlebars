<h1 class="mb-4 fw-bold">Create New Voucher</h1>
<form method="POST" action="/staff/vouchers">
  <div class="mb-3">
    <label for="code" class="form-label">Voucher Code</label>
    <input type="text" class="form-control" name="code" id="code" required maxlength="50">
  </div>
  <div class="mb-3">
    <label for="discount_type" class="form-label">Discount Type</label>
    <select class="form-select" name="discount_type" id="discount_type" required>
      <option value="percentage">Percentage (%)</option>
      <option value="amount">Fixed Amount ($)</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="discount_value" class="form-label">Discount Value</label>
    <input type="number" class="form-control" name="discount_value" id="discount_value" required step="0.01" min="0">
  </div>
  <div class="mb-3">
    <label for="min_spend" class="form-label">Minimum Spend</label>
    <input type="number" class="form-control" name="min_spend" id="min_spend" step="0.01" min="0">
  </div>
  <div class="mb-3">
    <label for="expiry_date" class="form-label">Expiry Date</label>
    <input type="date" class="form-control" name="expiry_date" id="expiry_date" required>
  </div>
  <div class="mb-3">
    <label for="usage_limit" class="form-label">Usage Limit</label>
    <input type="number" class="form-control" name="usage_limit" id="usage_limit" required min="1">
  </div>
  <div class="mb-3">
    <label for="status" class="form-label">Status</label>
    <select class="form-select" name="status" id="status">
      <option value="active" selected>Active</option>
      <option value="inactive">Inactive</option>
    </select>
  </div>
  <button class="btn btn-success" type="submit">Create Voucher</button>
  <a href="/staff/vouchers" class="btn btn-secondary ms-2">Cancel</a>
</form>
