<style>
  .create-voucher-container {
    max-width: 800px;
    margin: 140px auto 4rem; /* 140px pushes content below fixed navbar */
    padding: 2rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    font-family: 'DM Sans', sans-serif;
  }

  .create-voucher-container h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 2rem;
    text-align: center;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .create-voucher-container .form-label {
    font-weight: 600;
    color: #555;
  }

  .create-voucher-container .form-control,
  .create-voucher-container .form-select {
    border-radius: 12px;
    padding: 0.75rem 1rem;
    border: 1px solid #ced4da;
    transition: border-color 0.3s ease;
  }

  .create-voucher-container .form-control:focus,
  .create-voucher-container .form-select:focus {
    border-color: #764ba2;
    box-shadow: 0 0 0 0.2rem rgba(118, 75, 162, 0.25);
  }

  .create-voucher-container .btn-success {
    background: linear-gradient(135deg, #28a745, #218838);
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 600;
    border-radius: 25px;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    transition: all 0.3s ease;
  }

  .create-voucher-container .btn-success:hover {
    background: linear-gradient(135deg, #218838, #28a745);
    box-shadow: 0 6px 20px rgba(40, 167, 69, 0.5);
    transform: translateY(-2px);
  }

  .create-voucher-container .btn-secondary {
    background: linear-gradient(135deg, #6c757d, #5a6268);
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 600;
    border-radius: 25px;
    color: white;
    box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
    transition: all 0.3s ease;
  }

  .create-voucher-container .btn-secondary:hover {
    background: linear-gradient(135deg, #5a6268, #6c757d);
    transform: translateY(-2px);
    color: white;
  }
</style>

<div class="create-voucher-container">
  <h1>Create New Voucher</h1>
  <form method="POST" action="/staff/vouchers">
    <div class="mb-3">
      <label for="code" class="form-label">Voucher Code</label>
      <input type="text" class="form-control" name="code" id="code" required maxlength="50">
    </div>
    <div class="mb-3">
      <label for="discount_type" class="form-label">Discount Type</label>
      <select class="form-select" name="discount_type" id="discount_type" required>
        <option value="percentage">Percentage (%)</option>
        <option value="amount">Fixed Amount ($)</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="discount_value" class="form-label">Discount Value</label>
      <input type="number" class="form-control" name="discount_value" id="discount_value" required step="0.01" min="0">
    </div>
    <div class="mb-3">
      <label for="min_spend" class="form-label">Minimum Spend</label>
      <input type="number" class="form-control" name="min_spend" id="min_spend" step="0.01" min="0">
    </div>
    <div class="mb-3">
      <label for="expiry_date" class="form-label">Expiry Date</label>
      <input type="date" class="form-control" name="expiry_date" id="expiry_date" required>
    </div>
    <div class="mb-3">
      <label for="usage_limit" class="form-label">Usage Limit</label>
      <input type="number" class="form-control" name="usage_limit" id="usage_limit" required min="1">
    </div>
    <div class="mb-3">
      <label for="status" class="form-label">Status</label>
      <select class="form-select" name="status" id="status">
        <option value="active" selected>Active</option>
        <option value="inactive">Inactive</option>
      </select>
    </div>
    <div class="d-flex justify-content-end mt-4">
      <button class="btn btn-success" type="submit">Create Voucher</button>
      <a href="/staff/vouchers" class="btn btn-secondary ms-3">Cancel</a>
    </div>
  </form>
</div>
